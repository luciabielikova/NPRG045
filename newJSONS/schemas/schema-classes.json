{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Animal Classes Schema",
    "description": "Schema for animal taxonomic classes",
    "$id": "https://example.org/schema-classes.json",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique identifier for the class"
        },
        "translations": {
          "type": "object",
          "description": "Localized names and descriptions",
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Class name in the specified language"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the class in the specified language"
                }
              },
              "required": [
                "name"
              ],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "translations"
      ],
      "additionalProperties": false
    }
  }