{
    "$schema": "http://json-schema.org/2020-2012/schema",
    "title": "Animals Schema",
    "description": "Schema for animal taxonomics",
    "$id": "https://example.org/schema-animals.json",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "class_id": {
          "type": "integer"
        },
        "order_id": {
          "type": "integer"
        },
        "habitats": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "continents": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "latin_name": {
          "type": "string"
        },
        "image_src": {
          "type": "string",
          "format": "uri"
        },
        "localities_url": {
          "type": "string",
          "format": "uri"
        },
        "translations": {
          "type": "object",
          "properties": {
            "en": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "spread_note": {
                  "type": "string"
                },
                "food": {
                  "type": "string"
                },
                "food_note": {
                  "type": "string"
                },
                "image_alt": {
                  "type": "string"
                },
                "proportions": {
                  "type": "string"
                },
                "reproduction": {
                  "type": "string"
                },
                "attractions": {
                  "type": "string"
                },
                "projects_note": {
                  "type": "string"
                },
                "breeding": {
                  "type": "string"
                },
                "localities_title": {
                  "type": "string"
                }
              },
              "required": [
                "name"
              ]
            },
            "sk": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "spread_note": {
                  "type": "string"
                },
                "food": {
                  "type": "string"
                },
                "food_note": {
                  "type": "string"
                },
                "proportions": {
                  "type": "string"
                },
                "reproduction": {
                  "type": "string"
                },
                "attractions": {
                  "type": "string"
                },
                "projects_note": {
                  "type": "string"
                },
                "breeding": {
                  "type": "string"
                },
                "localities_title": {
                  "type": "string"
                }
              },
              "required": [
                "name"
            ]
            },
            "de": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "spread_note": {
                  "type": "string"
                },
                "food": {
                  "type": "string"
                },
                "food_note": {
                  "type": "string"
                },
                "proportions": {
                  "type": "string"
                },
                "reproduction": {
                  "type": "string"
                },
                "attractions": {
                  "type": "string"
                },
                "projects_note": {
                  "type": "string"
                },
                "breeding": {
                  "type": "string"
                },
                "localities_title": {
                  "type": "string"
                }
              },
              "required": [
                "name"
              ]
            }
          },
          "anyOf": [
            { "required": ["en"] },
            { "required": ["cz"] },
            { "required": ["de"] }
          ]
        }
      },
      "required": [
        "id",
        "latin_name",
        "translations"
      ]
    }
  }
  


